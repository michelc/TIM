<% if @note.errors.any? %>
<ul>
  <% @note.errors.each do |error| %><li><%= error.join(" ") %></li><% end %>
</ul>
<% end %>

<form action="/notes" method="post">
  <fieldset class="form">
    <p>
      <label for="title">Titre</label>
      <input id="title" name="note[title]" type="text" value="<%= @note.title %>" />
    </p>
    <p>
      <label for="content">Contenu</label>
      <textarea id="content" name="note[content]" cols="20" rows="22" class="wide"><%= @note.content %></textarea>
    </p>
    <p>
      <label for="tags">Liste tags</label>
      <input id="tags" name="note[tags]" type="text" value="<%= @note.tags %>" />
    </p>
    <p class="submit">
      <input id="submit" type="submit" value="Ajouter" />
      <a href="/notes">Annuler</a>
    </p>
  </fieldset>
</form>

<script src="/small.form.js"></script>
