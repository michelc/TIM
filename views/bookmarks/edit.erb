<h3><%= bookmark_title(@bookmark) %></h3>

<% if @bookmark.errors.any? %>
<ul>
  <% @bookmark.errors.each do |error| %><li><%= error.join(" ") %></li><% end %>
</ul>
<% end %>

<form action="/bookmarks/<%= @bookmark.id %>" method="post">
  <input type="hidden" name="_method" value="put" />
  <fieldset class="form">
    <p>
      <label for="url">URL</label>
      <input id="url" name="bookmark[url]" type="text" value="<%= @bookmark.url %>" />
    </p>
    <p>
      <label for="title">Titre</label>
      <input id="title" name="bookmark[title]" type="text" value="<%= @bookmark.title %>" />
    </p>
    <p>
      <label for="description">Description</label>
      <textarea id="description" name="bookmark[description]" cols="20" rows="2" class="small"><%= @bookmark.description %></textarea>
    </p>
    <p>
      <label for="tags">Tags</label>
      <input id="tags" name="bookmark[tags]" type="text" value="<%= @bookmark.tags %>" />
    </p>
    <p class="submit">
      <input id="submit" type="submit" value="Modifier" />
      <a href="/bookmarks">Annuler</a>
    </p>
  </fieldset>
</form>

<script src="/small.form.js"></script>
